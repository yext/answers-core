{
  "name": "@yext/answers-core",
  "version": "1.0.0",
  "description": "Javascript Networking Library for the Yext Answers API",
  "main": "./dist/index.js",
  "types": "./dist/answers-core.d.ts",
  "engines": {
    "node": ">=0.12"
  },
  "scripts": {
    "test": "npm run lint && jest",
    "lint": "eslint .",
    "build": "tsc && npm run api-extractor && npm run generate-docs",
    "build-ci": "tsc && npm run api-extractor-ci && npm run generate-docs",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "api-extractor": "api-extractor run --local --verbose",
    "api-extractor-ci": "api-extractor run --verbose",
    "generate-docs": "api-documenter markdown --input-folder temp --output-folder docs && rm -rf temp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yext/answers-core.git"
  },
  "author": "slapshot@yext.com",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/yext/answers-core/issues"
  },
  "homepage": "https://github.com/yext/answers-core#readme",
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@microsoft/api-documenter": "^7.11.3",
    "@microsoft/api-extractor": "^7.12.0",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-jest": "^26.6.1",
    "eslint": "^7.11.0",
    "jest": "^26.6.0",
    "jest-fetch-mock": "^3.0.3",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "whatwg-fetch": "^3.4.1"
  },
  "jest": {
    "bail": 0,
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup/setup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "testPathIgnorePatterns": [
      "./tests/setup/setup.js",
      "./tests/mocks/*"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.[jt]s"
    ]
  }
}
